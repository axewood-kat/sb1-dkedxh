{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "outDir": "../../dist/functions",
    "rootDir": ".",
    "allowJs": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "../../node_modules"]
}